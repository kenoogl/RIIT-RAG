# スーパーコンピュータ運用支援RAGシステム - 環境変数設定例

# APIポート設定
API_PORT=8000

# ログレベル設定 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 設定ファイルパス
CONFIG_PATH=./config.yaml

# データディレクトリ
DATA_DIR=./data

# モデルディレクトリ
MODEL_DIR=./models

# 埋め込みモデル設定
EMBEDDING_MODEL_NAME=intfloat/multilingual-e5-base
EMBEDDING_MODEL_PATH=./models/embedding

# 生成モデル設定（オプション）
# GENERATION_MODEL_NAME=rinna/japanese-gpt-neox-3.6b
# GENERATION_MODEL_PATH=./models/generation

# ベクトルデータベース設定
VECTOR_DB_PATH=./data/vectors

# 文書保存パス
DOCUMENTS_PATH=./data/documents

# ログファイルパス
LOG_FILE_PATH=./logs/rag_system.log

# クローリング設定
CRAWL_BASE_URL=https://www.cc.kyushu-u.ac.jp/scp/
CRAWL_MAX_DEPTH=3
CRAWL_DELAY=1.0

# 検索設定
SEARCH_TOP_K=5
SEARCH_MIN_SCORE=0.5

# チャンク設定
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# パフォーマンス設定
MAX_WORKERS=4
BATCH_SIZE=32
